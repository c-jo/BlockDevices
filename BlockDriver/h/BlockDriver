/*******************************************************************
 * File:        BlockDriver
 * Purpose:     Constants for accessing the block driver interfaces
 * Author:      Chris Johns
 ******************************************************************/

#ifndef BlockDriver_H
#define BlockDriver_H

#ifndef CMHG

// Invalid device id
#define BlockDevice_Invalid (0)

// Block device types for a specific device
typedef enum block_device_type_e {
    BlockDevice_Type_Unknown = 0,
    BlockDevice_Type_NVMe = 1
} block_device_type_t;

// Block device locations for specific devices
typedef enum block_device_location_e {
    BlockDevice_Location_Unknown = 0
} block_device_location_t;

// Block device fetures for specific devices
typedef enum block_device_location_e {
    BlockDevice_Feature_None = 0
} block_device_feature_t;

// Service calls - **NOT UET REGISTERED**
#define Service_BlockDriver (0x88000)
#define Service_BlockDriver_Started (0)
#define Service_BlockDriver_Dying (1)
#define Service_BlockDriver_DeviceAdded (2)
#define Service_BlockDriver_DeviceRemove (3)

// Error numbers - **NOT YET REGISTERED**
#define ErrorBase_BlockDriver (0x880000)
#define ErrorNumber_NoSuchDevice (ErrorBase_BlockDriver + 0)
#define ErrorNumber_UnsupportedOperation (ErrorBase_BlockDriver + 1)
#define ErrorNumber_DeviceInUse (ErrorBase_BlockDriver + 2)

// SWI numbers - **NOT YET REGISTERED*
#ifndef BlockDriver_Version
#define BlockDriver_0 (0x5F000)
#define BlockDriver_Version (BlockDriver_0 + 0)
#define BlockDriver_Enumerate (BlockDriver_0 + 1)
#define BlockDriver_Info (BlockDriver_0 + 2)
#define BlockDriver_DeviceOp (BlockDriver_0 + 3)
#endif

#endif
