/*******************************************************************
 * File:        commands
 * Purpose:     Implementation of the *Commands
 * Author:      Chris Johns
 ******************************************************************/

#ifndef COMMANDS_H
#define COMMANDS_H

#include "kernel.h"


/*******************************************************************
 Function:      Cmd_BlockDevices
 Description:   Display information about the block devices
 Parameters:    none
 Returns:       pointer to an error block if failed
                NULL if successful
 ******************************************************************/
_kernel_oserror *Cmd_BlockDevices(void);

/*******************************************************************
 Function:      Cmd_BlockDeviceInfo
 Description:   Display information about a block device
 Parameters:    none
 Returns:       pointer to an error block if failed
                NULL if successful
 ******************************************************************/
_kernel_oserror *Cmd_BlockDeviceInfo(const char *arg_string, int argc);

#endif
